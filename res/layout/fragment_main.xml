<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ljc.securitysms.MainActivity$PlaceholderFragment" >
 <LinearLayout
 android:layout_width="match_parent"
 android:layout_height="match_parent"
 android:orientation="vertical"
 android:padding="10dp"> 
    <TextView
  android:layout_width="match_parent"
  android:layout_height="50dp"
  android:layout_marginLeft="34dp"
  android:layout_marginRight="20dp"
  android:text="Welcome To"
  android:textColor="#000"
  android:textSize="35sp" />
    <TextView
  android:layout_width="match_parent"
  android:layout_height="60dp"
  android:layout_marginLeft="5dp"
  android:text="@string/welcome"
  android:textColor="#000"
  android:textSize="45sp" /> 

</LinearLayout>
    
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="230dp"
    android:orientation="vertical"
        >
    <Button 
        android:id="@+id/produce_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="创建RSA密钥"/>
    
    <Button 
        android:id="@+id/enter_sys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="发送消息RSA"/>
     <Button 
        android:id="@+id/enter_sys_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="发送消息DES"/>
    <Button 
        android:id="@+id/Receive_decrypt_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="解密短信"/>
   </LinearLayout>
</RelativeLayout>
